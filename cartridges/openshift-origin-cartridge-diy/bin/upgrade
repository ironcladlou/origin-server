#!/bin/bash

source $OPENSHIFT_CARTRIDGE_SDK_BASH

diy_version="$1"
old_cart_version="$2"
new_cart_version="$3"

if [ -f ${OPENSHIFT_DIY_DIR}/env/OPENSHIFT_DIY_LOG_DIR ] && [ ! -L ${OPENSHIFT_DIY_DIR}/env/OPENSHIFT_DIY_LOG_DIR ]
then
    rm ${OPENSHIFT_DIY_DIR}/env/OPENSHIFT_DIY_LOG_DIR
    ln -s ~/.env/OPENSHIFT_LOG_DIR ${OPENSHIFT_DIY_DIR}/env/OPENSHIFT_DIY_LOG_DIR
fi
